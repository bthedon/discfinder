<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @course.address %> 
  <br>
  <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@course.latitude}%2C#{@course.longitude}" %>

</p>

<p>
  <h2>Lost Discs</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Hole</th>
      <th>Color</th>
      <th>Brand</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @course.discs.each do |disc| %> 
  	<tr>
  		 <td><%= disc.hole.number %></td>
  		 <td><%= disc.color %></td>
   		 <td><%= disc.brand %></td>
   		 <td><%= disc.name %></td>  
	</tr>
  <% end %>
  </tbody>
  </table> 
</p>

<br>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
