<p id="notice"><%= notice %></p>

<h1>Listing Discs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Color</th>
      <th>User</th>
      <th>Course</th>
      <th>Hole</th>
      <th>Day lost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discs.each do |disc| %>
      <tr>
        <td><%= disc.brand %></td>
        <td><%= disc.name %></td>
        <td><%= disc.color %></td>
        <td><%= disc.user.email %></td>
        <td><%= disc.course.name %></td>
        <td><%= disc.hole_id %></td>
        <td><%= disc.day_lost %></td>
        <td><%= link_to 'Show', disc %></td>
        <td><%= link_to 'Edit', edit_disc_path(disc) %></td>
        <td><%= link_to 'Destroy', disc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

