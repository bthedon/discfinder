<%= simple_form_for(@disc) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :name %>
    <%= f.input :color %>
    <%= f.association :course %>
    <%= f.association :hole %>
    <%= f.input :day_lost %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
