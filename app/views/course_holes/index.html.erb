<p id="notice"><%= notice %></p>

<h1>Listing Course Holes</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Hole</th>
      <th>Terrain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_holes.each do |course_hole| %>
      <tr>
        <td><%= course_hole.course_id %></td>
        <td><%= course_hole.hole_id %></td>
        <td><%= course_hole.terrain %></td>
        <td><%= link_to 'Show', course_hole %></td>
        <td><%= link_to 'Edit', edit_course_hole_path(course_hole) %></td>
        <td><%= link_to 'Destroy', course_hole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

